// 451. Sort Characters By Frequency
// Medium
// TC: O(N)
// SC: O(N)
class Solution {
 public:
  string frequencySort(string s) {
    std::vector<std::pair<int, char>> num_char(UCHAR_MAX);
    for (char c : s) {
      num_char[c].first++;
      num_char[c].second = c;
    }
    auto f = [](const std::pair<int, char>& a, const std::pair<int, char>& b) {
	       return a > b;
	     };
    std::sort(num_char.begin(), num_char.end(), f);
    std::string res;
    res.reserve(s.size());
    for (const auto& [n, c] : num_char) {
      if (n == 0) break;
      res.append(n, c);
    }
    return res;
  }
};
